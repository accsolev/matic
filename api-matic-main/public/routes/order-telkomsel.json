{
  "name": "order-telkomsel",
  "title": "Paket Data Telkomsel",
  "description": "Melakukan pemesanan paket data Telkomsel (reguler, bulk, cashback).",
  "method": "POST",
  "path": "/api/order-telkomsel",
  "has_product_dropdown": true,
  "product_options": {
    "get_products_endpoint": "/api/get-telkomsel-products",
    "group_by": "provider.name",
    "sort_by": "price"
  },
  "parameters": [
    {
      "type": "text",
      "name": "auth_token",
      "label": "Auth Token",
      "placeholder": "Token dari API OrderKuota"
    },
    {
      "type": "text",
      "name": "auth_username",
      "label": "Auth Username",
      "placeholder": "Username dari API OrderKuota"
    },
    {
      "type": "text",
      "name": "target_number",
      "label": "Nomor Telkomsel Tujuan",
      "placeholder": "081212345678"
    },
    {
      "type": "select",
      "name": "voucher_id",
      "label": "Pilih Paket Data Telkomsel"
    }
  ],
  "response": {
    "success": true,
    "status": "Sukses",
    "message": "Order sedang diproses."
  },
  "curl": "curl -X POST https://bovalone.me/api/order-telkomsel \\\n  -H \"Content-Type: application/json\" \\\n  -d '{\"auth_token\":\"...\", \"auth_username\":\"...\", \"target_number\":\"081212345678\", \"voucher_id\":\"...\"}'",
  "category": "Order Kuota"
}