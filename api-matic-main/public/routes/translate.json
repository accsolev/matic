{
  "title": "DeepL Translate",
  "description": "Menerjemahkan teks dari satu bahasa ke bahasa lain, daftar lengkap bahasa yang didukung dari endpoint /api/translate/supported-languages",
  "method": "POST",
  "path": "/api/translate",
  "request_body": {
    "text": "string (Teks yang akan diterjemahkan)",
    "sourceLang": "string (Kode bahasa sumber, misal: 'id', 'fr', 'es')",
    "targetLang": "string (Kode bahasa tujuan, misal: 'en-US', 'en-GB', 'id', 'es')"
  },
  "example_request_body": {
    "text": "Halo dunia! Apa kabar?",
    "sourceLang": "id",
    "targetLang": "en-US"
  },
  "response": {
    "success": true,
    "originalText": "Halo dunia! Apa kabar?",
    "translatedText": "Hello world! How are you?",
    "detectedSourceLang": "id",
    "targetLang": "en-US"
  },
  "curl": "curl -X POST \\\n  -H \"Content-Type: application/json\" \\\n  -H \"Authorization: Bearer YOUR_ACCESS_TOKEN\" \\\n  'https://bovalone.me/api/translate' \\\n  -d '{\"text\": \"Halo dunia! Apa kabar?\", \"sourceLang\": \"id\", \"targetLang\": \"en-US\"}'",
  "parameters": [
    {
      "type": "textarea",
      "name": "text",
      "label": "Text",
      "placeholder": "Text to translate"
    },
    {
      "type": "text",
      "name": "sourceLang",
      "label": "Source Language",
      "placeholder": "e.g., en"
    },
    {
      "type": "text",
      "name": "targetLang",
      "label": "Target Language",
      "placeholder": "e.g., id"
    }
  ],
  "category": "Tools"
}