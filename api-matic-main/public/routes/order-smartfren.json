  "description": "Melakukan pemesanan paket data Smartfren ke nomor tujuan.",
  "method": "POST",
  "path": "/api/order-smartfren",
  "has_product_dropdown": true,
  "product_options": {
    "get_products_endpoint": "/api/get-smartfren-products",
    "group_by": "provider.name",
    "sort_by": "price"
  },
  "parameters": [
    {
      "type": "text",
      "name": "auth_token",
      "label": "Auth Token",
      "placeholder": "Token dari API OrderKuota"
    },
    {
      "type": "text",
      "name": "auth_username",
      "label": "Auth Username",
      "placeholder": "Username dari API OrderKuota"
    },
    {
      "type": "text",
      "name": "target_number",
      "label": "Nomor Smartfren Tujuan",
      "placeholder": "088112345678"
    },
    {
      "type": "select",
      "name": "voucher_id",
      "label": "Pilih Paket Data Smartfren"
    }
  ],
  "response": {
    "success": true,
    "status": "Sukses",
    "message": "Order sedang diproses.",
