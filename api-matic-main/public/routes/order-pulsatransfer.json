{
  "name": "order-pulsatransfer",
  "title": "PasarKuota Pulsa Transfer",
  "description": "Melakukan transfer pulsa melalui PasarKuota.",
  "method": "POST",
  "path": "/api/order-pulsatransfer",
  "has_product_dropdown": true,
  "product_options": {
    "get_products_endpoint": "/api/get-pulsatransfer-products",
    "group_by": "provider.name",
    "sort_by": "price"
  },
  "parameters": [
    {
      "type": "text",
      "name": "auth_token",
      "label": "Auth Token",
      "placeholder": "Token dari API PasarKuota"
    },
    {
      "type": "text",
      "name": "auth_username",
      "label": "Auth Username",
      "placeholder": "Username dari API PasarKuota"
    },
    {
      "type": "text",
      "name": "target_number",
      "label": "Nomor HP Tujuan",
      "placeholder": "Contoh: 081234567890"
    },
    {
      "type": "select",
      "name": "voucher_id",
      "label": "Pilih Nominal Pulsa Transfer"
    }
  ],
  "response": {
    "success": true,
    "results": {
      "id": 1234567
    }
  },
  "curl": "curl -X POST https://bovalone.me/api/order-pulsatransfer \\\n  -H \"Authorization: Bearer {API_KEY}\" \\\n  -H \"Content-Type: application/json\" \\\n  -d '{\"auth_token\":\"...\", \"auth_username\":\"...\", \"voucher_id\":\"...\", \"target_number\":\"081234567890\"}'",
  "category": "Pasar Kuota"
}
