  "curl": "curl -X POST https://bovalone.me/api/deposit-qris \\\n  -H \"Authorization: Bearer YOUR_API_KEY\" \\\n  -H \"Content-Type: application/json\" \\\n  -d '{\"auth_token\":\"USER_TOKEN\",\"auth_username\":\"USER_USERNAME\",\"amount\":\"10000\"}'",
  "category": "Order Kuota"
}