  "method": "POST",
  "path": "/api/deposit-qris",
  "parameters": [
    {
      "type": "text",
      "name": "auth_token",
      "label": "Auth Token",
      "placeholder": "Token dari API OrderKuota"
    },
    {
      "type": "text",
      "name": "auth_username",
      "label": "Auth Username",
      "placeholder": "Username dari API OrderKuota"
    },
    {
      "type": "number",
      "name": "amount",
      "label": "Jumlah Deposit",
      "placeholder": "Contoh: 25000"
    }
  ],
  "response": {
    "success": true,
    "qrcode_url": "https://qris.orderkuota.com/qrnb/...",
