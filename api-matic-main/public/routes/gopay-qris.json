{
  "title": "GoPay QRIS Dinamis",
  "description": "Generates a GoPay QRIS Merchant payment QR code instantly, valid for 5 minutes.",
  "method": "POST",
  "path": "/api/gopay-qris",
  "parameters": [
    {
      "name": "storeName",
      "label": "Name Store Gopay Merchant",
      "type": "text",
      "placeholder": "e.g., My GoPay Shop",
      "required": true
    },
    {
      "name": "merchantId",
      "label": "Your GoPay Merchant ID",
      "type": "text",
      "placeholder": "e.g., ID1025..",
      "required": true
    },
    {
      "name": "baseQrString",
      "label": "Your GoPay Base QR String",
      "type": "text",
      "placeholder": "e.g., 000201010212...",
      "required": true
    },
    {
      "name": "amount",
      "label": "Payment Amount (IDR)",
      "type": "number",
      "placeholder": "e.g., 25000",
      "required": true
    }
  ],
  "response": {
    "success": true,
    "message": "GoPay payment QR generated successfully.",
    "data": {
      "reference": "GOPAY-1701234567890",
      "amount": 25000,
      "transactionId": "GPY-TRX-1701234567890",
      "qr_image_data_url": "data:image/png;base64,iVBORw0KGgoAAA...",
      "status": "PENDING",
      "storeNameUsed": "My GoPay Shop",
      "merchantIdUsed": "GPY-MERCHANT-ID",
      "baseQrStringUsed": "GOPAY_QR_STATIC_STRING_HERE"
    },
    "error": null
  },
  "curl": "curl -X POST \\\n  -H \"Content-Type: application/json\" \\\n  -H \"Authorization: Bearer YOUR_API_KEY\" \\\n  'https://bovalone.me/api/gopay-qris' \\\n  -d '{\"storeName\": \"GoPay User Store\", \"merchantId\": \"GPY_MERCHANT_ID\", \"baseQrString\": \"GPY_BASE_QR_STRING\", \"amount\": 25000}'",
  "category": "QRIS & QRCODE",
  "hidden": false
}